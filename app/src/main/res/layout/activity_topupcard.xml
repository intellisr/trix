<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".topupcard"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_weight="0.85"
        android:background="@color/design_default_color_secondary_variant">

        <ImageButton
            android:id="@+id/imageButton10"
            android:layout_width="95dp"
            android:layout_height="88dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="9dp"
            app:srcCompat="@drawable/menubttn1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="144dp"
            android:layout_height="94dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            app:srcCompat="@drawable/logo"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="602dp"
        android:layout_weight="0.15"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="120dp"
        android:background="">

        <Button
            android:id="@+id/button5"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="148dp"
            android:text="Credit/Debit Card" />

        <Button
            android:id="@+id/button3"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="222dp"
            android:text="Voucher" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="376dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="290dp"
            android:text="Select Top Up option :"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="333dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="546dp"
            android:text="Top Up Card"
            android:textColor="@color/black"
            android:textSize="32dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customer_id"
            android:layout_width="299dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="56dp"
            android:layout_marginTop="467dp"
            android:layout_marginEnd="56dp"
            android:layout_marginBottom="378dp"
            android:ems="18"
            android:hint="Enter Customer card number"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="452dp"
            android:text="Enter TrixApp customer card number"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>